<div class="profile">
  <div class="container">
    <div class="row align-items-center">
      <div class="mb-3">
        <%= link_to "â¬… All Animals", animals_path %>
      </div>
      <div class="blue-div">
        <%= render "animal_image", animal: @animal %>
        <div class="title-page">
          <h1><%= @animal.name %></h1>
          <h2><%= @animal.animal_type %></h2>
          <p><%= @animal.description %></p>
          <p>$<%= @animal.price %>/day</p>
        </div>
      </div>

      <% if current_user != @animal.user%>
      <%= link_to "Book Now", new_animal_booking_path(@animal), class: "btn btn-lightblue" %>
      <%else %>
      <% end %>

    </div>
    
    <div>
    <% if current_user == @animal.user%>
      <h1> Edit Your Animal </h1>
      <%= simple_form_for @animal, url: update_animal_path, method: :patch do |f| %>
        <%= f.input :name %>
        <%= f.input :animal_type %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit %>
      <% end %>
    <% end %>
    </div>
  </div>

</div>
