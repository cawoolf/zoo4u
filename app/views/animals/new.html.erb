<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 show-booking mt-5">
      <h1 class="index-title">Register Your Animal</h1>
      <%= simple_form_for @animal do |f| %>
        <%= f.input :name %>
        <%= f.input :animal_type %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <div class="text-center"><%= f.button :submit, class: "animal-btn" %></div>
      <% end %>
    </div>
  </div>
</div>
